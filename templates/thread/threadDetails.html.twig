{% extends 'base.html.twig' %}

{% block title %}Hello ThreadController!{% endblock %}

{% block body %}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 600px;">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        {% if threads.status == 'open' %}
          <span class="badge bg-success">Open</span>
        {% else %}
          <span class="badge bg-danger">Closed</span>
        {% endif %}
        <small class="text-muted">Edited: {{ threads.edited|date('Y-m-d H:i:s') }}</small>
      </div>
      <h1 class="card-title">{{ threads.title }}</h1>
      <p class="card-text">{{ threads.description }}</p>
      <p class="card-text">{{ threads.main }}</p>
      <small class="text-muted">Created: {{ threads.created|date('Y-m-d H:i:s') }}</small>
    </div>
  </div>
</div>



{% endblock %}
