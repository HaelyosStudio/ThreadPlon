{% extends 'base.html.twig' %}

{% block title %}Hello ThreadController!
{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center threadContainer" style="height: 100vh;">
        {% for thread in threads %}
            <div class="mb-3">
                <a href="{{ path('app_thread', {'id': thread.id}) }}">
                    <div class="d-flex justify-content-center align-items-center" style="width: fit-content; height: fit-content;">
                        <div class="card" style="width: 500px; height: 250px;">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div class="d-flex justify-content-between align-items-center">
                                    {% if thread.status == 'open' %}
                                        <span class="badge bg-success">Open</span>
                                    {% else %}
                                        <span class="badge bg-danger">Closed</span>
                                    {% endif %}
                                    <small class="text-muted">Edited:
                                        {{ thread.edited|date('Y-m-d H:i:s') }}</small>
                                </div>
                                <h1 class="card-title threadTitle">{{ thread.title }}</h1>
                                <p class="card-text">{{ thread.main }}</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}

